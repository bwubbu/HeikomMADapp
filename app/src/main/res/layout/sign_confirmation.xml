<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/box"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign This Petition"
        android:fontFamily="@font/rubik_bold"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:text="Before proceeding to sign the petition, we kindly ask you to take a moment to consider your decision carefully, as it is an irreversible action, and once you've added your signature, it cannot be undone"
        android:fontFamily="@font/rubik_medium"
        android:textSize="18dp"
        android:background="@drawable/border"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/sign"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="SIGN"
            android:fontFamily="@font/rubik_bold"
            android:textStyle="bold"
            android:backgroundTint="@color/main_green"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="CANCEL"
            android:fontFamily="@font/rubik_bold"
            android:textStyle="bold"
            android:backgroundTint="@color/grey"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

</LinearLayout>