<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelplineSection">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="411dp"
            android:layout_height="328dp"
            android:src="@drawable/headerhelpline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="81dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/police"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="84dp"
            android:layout_height="82dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ambulance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/fireman"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="167dp"
            android:layout_height="142dp"
            android:src="@drawable/helpline"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView13"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVHeaderHelpline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/rubik_bold"
            android:text="Helpline Section"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView13"
            app:layout_constraintStart_toStartOf="@+id/imageView13"
            app:layout_constraintTop_toBottomOf="@+id/imageView14" />

        <Button
            android:id="@+id/btnPolice"
            android:layout_width="210dp"
            android:layout_height="54dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="62dp"
            android:backgroundTint="#D9D9D9"
            android:fontFamily="@font/rubik_medium"
            android:contentDescription="NoPolice"
            android:text="999"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" />

        <Button
            android:id="@+id/btnAmbulance"
            android:layout_width="210dp"
            android:layout_height="54dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="51dp"
            android:backgroundTint="#D9D9D9"
            android:fontFamily="@font/rubik_medium"
            android:text="999"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:cornerRadius="10dp"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/btnPolice" />

        <Button
            android:id="@+id/btnFiremen"
            android:layout_width="210dp"
            android:layout_height="54dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="47dp"
            android:backgroundTint="#D9D9D9"
            android:fontFamily="@font/rubik_medium"
            android:text="994"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:cornerRadius="10dp"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/btnAmbulance" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="#4C9A2A"
            app:cornerRadius="10dp"
            app:icon="@drawable/backarrow"
            app:iconSize="36dp"
            app:iconTint="@color/black"
            android:contentDescription="return button"
            app:layout_constraintBottom_toTopOf="@+id/imageView14"
            app:layout_constraintEnd_toStartOf="@+id/imageView14"
            app:layout_constraintStart_toStartOf="@+id/imageView13"
            app:layout_constraintTop_toTopOf="@+id/imageView13" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>