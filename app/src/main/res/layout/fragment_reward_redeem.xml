<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_with_white_bg"
    tools:context=".RewardRedeem">

    <!-- GifImageView -->

    <!-- Linear Layout for Text -->

    <!-- Text: Redeem Your Reward -->

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/circleFrame"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:background="@drawable/majitenshi"
        android:paddingTop="10dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101dp"
        android:orientation="vertical"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/rewardRedeemText"
            android:fontFamily="@font/rubik_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="7dp"
            android:text="Report Activity"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:fontFamily="@font/rubik_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Welcome Wan Ahmad Ni"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="333dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/deleteReport"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0"
            android:backgroundTint="#d98f95" />

        <ImageButton
            android:id="@+id/addReport"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0"
            android:backgroundTint="#9dd98f"/>
    </LinearLayout>

    />

    <!-- Other Views can be added similarly -->

</RelativeLayout>

