<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Green color background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#68BB59" />
        </shape>
    </item>

    <!-- Rounded corner rectangle overlay -->
    <item
        android:top="150dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="-5dp"> <!-- Adjust these values -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFF" /> <!-- Fill color of the rectangle -->
            <corners android:radius="30dp" /> <!-- Corner radius -->
        </shape>
    </item>

</layer-list>


